  bindsym $mod+Shift+Escape move scratchpad
  bindsym $mod+Escape scratchpad show

  # modbindings
  bindsym $mod+r mode "resize"
  bindsym $mod+p mode "$hdmi_out"

  # Exchange Clipboard and Primary
  bindsym $mod+c exec ruby ~/scripts/ruby/exchangeClipboards.rb

#modes

  # resize window (you can also use the mouse for that)
    mode "resize" {
      # These bindings trigger as soon as you enter the resize mode

      # Pressing left will shrink the window’s width.
      # Pressing right will grow the window’s width.
      # Pressing up will shrink the window’s height.
      # Pressing down will grow the window’s height.
      bindsym j resize shrink width 10 px or 10 ppt
      bindsym k resize grow height 10 px or 10 ppt
      bindsym l resize shrink height 10 px or 10 ppt
      bindsym semicolon resize grow width 10 px or 10 ppt

      # same bindings, but for the arrow keys
      bindsym Left resize shrink width 10 px or 10 ppt
      bindsym Down resize grow height 10 px or 10 ppt
      bindsym Up resize shrink height 10 px or 10 ppt
      bindsym Right resize grow width 10 px or 10 ppt

      # back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
    }
  # hdmi output setup

    # turn hdmi output on/off
    set $hdmi_out HDMI: (1) On | (2) Off
    mode "$hdmi_out" {
      # 1 to turn hdmi output on
      bindsym 1 mode "$hdmi_out_on"

      # 2 to turn hdmi output off
      bindsym 2 exec xrandr --output HDMI1 --off, mode "default"

      # back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
    }

    # Decide between default resolution of aspect ratio and detailed list
    set $hdmi_out_on (1) default 16:9 | (2) default 4:3 | (3) Resolutionmenu
    mode "$hdmi_out_on" {

      # 1 sets hdmi resolution to 1600x900
      bindsym 1 exec xrandr --addmode HDMI1 1600x900, exec xrandr --output HDMI1 --mode 1600x900 --right-of eDP1, mode "default"

      # 2 sets hdmi resolution to 1024x768
      bindsym 2 exec xrandr --addmode HDMI1 1024x768, exec xrandr --output HDMI1 --mode 1024x768 --right-of eDP1, mode "default"

      # 3 Opens resolution menu in scratchpad
      bindsym 3 exec i3-sensible-terminal -title float -e ruby ~/scripts/ruby/resolutionMenu.rb, mode "default"

      # back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
    }

